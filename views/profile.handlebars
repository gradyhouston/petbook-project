<body>
  <div id="w">
    <div id="content" class="clearfix">
      <div id="userphoto"><img src="/images/avatar.png" alt="default avatar"></div>
      <div class="pet-profile-header"><h2><strong>Pet Profile</strong></h2></div>

      <nav id="profiletabs">
        <ul class="clearfix">
          <li><a href="#bio" class="sel">Bio</a></li>
          <li><a href="#activity">Activity</a></li>
          <li><a href="#friends">Friends</a></li>
          <li><a href="#settings">Settings</a></li>
        </ul>
      </nav>

      <section id="bio">
        {{#user}}
        <p>My Pet Profile:</p>
        <p><strong>Owner Name: </strong>{{firstname}}</p>
        {{/user}}
        {{#pets}}
        <p><strong>My Name: </strong>{{pets_name}}</p>

        <p><strong>My Breed: </strong>{{pets_breed}}</p>

        <p><strong>My Age: </strong>{{pets_age}}</p>

        <p><strong>My Temperament: </strong>{{pets_temperament}}</p>
        {{/pets}}
      </section>

      <section id="activity" class="hidden">
        <p>Most recent actions:</p>

        <p class="activity">@10:15PM - Submitted an animal news article</p>

        <p class="activity">@9:50PM - Submitted a pet awareness article</p>

        <p class="activity">@8:15PM - Posted a comment about another pet</p>

        <p class="activity">@4:30PM - Added <strong>someusername</strong> as a friend</p>

        <p class="activity">@12:30PM - Submitted a lost pet alert article</p>
      </section>

      <section id="friends" class="hidden">
        <p>Friends list:</p>

        <ul id="friendslist" class="clearfix">
          <li><a href="#"><img src="/images/avatar.png" width="22" height="22"> Username</a></li>
          <br>
          <li><a href="#"><img src="/images/avatar.png" width="22" height="22"> SomeCat123</a></li>
          <br>
          <li><a href="#"><img src="/images/avatar.png" width="22" height="22"> PurpleGiraffe</a></li>
        </ul>
      </section>

      <section id="settings" class="hidden">
        <p>Edit your user settings:</p>

        <p class="setting"><span>E-mail Address <img src="/images/edit.png" alt="*Edit*"></span>email@email.com</p>

        <p class="setting"><span>Language <img src="/images/edit.png" alt="*Edit*"></span> English(US)</p>

        <p class="setting"><span>Profile Status <img src="/images/edit.png" alt="*Edit*"></span> Public</p>

        <p class="setting"><span>Update Frequency <img src="/images/edit.png" alt="*Edit*"></span> Weekly</p>

        <p class="setting"><span>Connected Accounts <img src="/images/edit.png" alt="*Edit*"></span> None</p>
      </section>
    </div>
    <!-- @end #content -->
  </div>
  <!-- @end #w -->

  <script type="text/javascript">
    $(function() {
      $('#profiletabs ul li a').on('click', function(e) {
        e.preventDefault();
        var newcontent = $(this).attr('href');

        $('#profiletabs ul li a').removeClass('sel');
        $(this).addClass('sel');

        $('#content section').each(function() {
          if (!$(this).hasClass('hidden')) {
            $(this).addClass('hidden');
          }
        });

        $(newcontent).removeClass('hidden');
      });
    });
  </script>
</body>
